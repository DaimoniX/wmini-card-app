/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 40rpx;
}

.spacer {
  flex-grow: 1;
  flex-shrink: 0;
  background-color: red;
}

.hflow {
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  gap: 20rpx;
  align-items: stretch;
  justify-content: stretch;
}

.vflow {
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  gap: 20rpx;
  align-items: stretch;
  justify-content: stretch;
}
