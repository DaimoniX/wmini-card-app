/* pages/customization/customization.wxss */
.container {
  height: 100vh;
  align-items: stretch;
  justify-content: flex-end;
  box-sizing: border-box;
  padding: 30rpx;
}

.server-frames {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.preview-flow {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-evenly;
  justify-items: center;
}

.preview-button {
  padding: 10rpx;
}

.preview-container {
  display: flex;
  position: relative;
  flex-direction: column;
  width: 50vw;
  height: 40vh;
  align-self: center;
  flex-shrink: 0;
}

.server-frames {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.preview-frame {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.content-box {
  z-index: 2;
  background-color: white;
  margin: 20px;
  height: 100%;
}