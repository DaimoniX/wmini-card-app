<!--pages/display/display.wxml-->
<view class="container">
  <view class="gp-container">
    <view class="gp-content">
      <text class="heading">Your generated page</text>
      <text class="name">{{articleData[0]}}</text>
      <text>Page title:</text>
      <text>{{articleData[1]}}</text>
      <text>Page URL:</text>
      <navigator open-type="navigate" class="url" url="web-view?url={{encodeURIComponent(articleData[2])}}">{{articleData[2]}}</navigator>
      <view class="qr">
        <canvas id="qrc" canvas-id="qrc" class="qrc" type="2d"></canvas>
      </view>
    </view>
  </view>
  <view class="bc">
    <button type="primary" bindtap="save">Save</button>
    <button type="primary" bindtap="preview">Preview</button>
  </view>
</view>