/* pages/display/display.wxss */
.container {
  align-items: stretch;
  justify-content: space-between;
  min-height: 100vh;
  gap: 30rpx;
  position: static;
}

button {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.bgimage {
  box-sizing: border-box;
  background-color: rgb(187, 187, 187);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

button:not([size=mini]) {
  width: 100% !important;
}

.article-container {
  background-color: rgb(182, 142, 209);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  font-family: sans-serif;
  position: relative;
}

.article-content {
  background: rgba(255, 255, 255, 0.8);
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  padding: 1rem;
  justify-content: space-between;
  gap: 20rpx;
  margin: 40rpx;
  z-index: 2;
}

.qr {
  width: 7rem;
  height: 7rem;
  background: rgb(224, 224, 224);
}

.qrc {
  width: 7rem;
  height: 7rem;
}

.name {
  text-align: center;
}

.customization {
  height: 270px;
}

.s-item {
  display: flex;
  flex-direction: column;
}

.hcanvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 0;
  height: 0;
  visibility: hidden;
}

.overlay {
  position: fixed;
  z-index: 5;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.overlay-content {
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-shadow: 0 0 10rpx 0 black;
}

.preview-flow {
  display: flex;
  align-items: center;
  gap: 30px;
}

.preview-container {
  display: flex;
  position: relative;
  flex-direction: column;
  width: 50vw;
  height: 40vh;
  align-self: center;
  flex-grow: 1;
  flex-shrink: 0;
}

.server-frames {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.preview-frame {
  box-sizing: border-box;
  background-color: rgb(187, 187, 187);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.preview-box {
  z-index: 2;
  background-color: white;
  margin: 20px;
  height: 100%;
}

.preview-button {
  height: 1rem;
  flex-grow: 0;
  flex-shrink: 1;
}