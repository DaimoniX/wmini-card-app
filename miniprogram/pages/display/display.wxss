/* pages/display/display.wxss */
.container {
  align-items: stretch;
  justify-content: space-between;
  min-height: 100vh;
  gap: 30rpx;
  position: static;
}

.bgimage {
  box-sizing: border-box;
  background-color: rgb(187, 187, 187);
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.article-container {
  background-color: rgb(182, 142, 209);
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: center;
  font-family: sans-serif;
  position: relative;
}

.article-content {
  background: rgba(255, 255, 255, 0.8);
  flex-grow: 2;
  display: flex;
  flex-direction: column;
  padding: 1rem;
  justify-content: space-between;
  gap: 20rpx;
  margin: 40px;
  z-index: 2;
}

.qr {
  width: 7rem;
  height: 7rem;
  background: rgb(224, 224, 224);
  position: relative;
}

.qrc {
  width: 7rem;
  height: 7rem;
}

.name {
  text-align: center;
}

.customization {
  height: 270px;
}

.s-item {
  display: flex;
  flex-direction: column;
}

.hcanvas {
  z-index: 3000;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
}

.icanvas {
  box-sizing: border-box;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -5;
}

.overlay {
  position: fixed;
  z-index: 5;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
}

.overlay-content {
  background-color: white;
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  box-shadow: 0 0 10rpx 0 black;
}
